<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_v1"
    tools:context="com.example.khong.caro_v1.MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/logo_v1" />

    <Button
        android:id="@+id/btnSound"
        android:layout_marginLeft="10dp"
        android:background="@drawable/sound_on"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:orientation="vertical"
        android:paddingTop="0dp">

        <Button
            android:layout_marginTop="25dp"
            android:id="@+id/btn_bot"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/oval"
            android:text="Chơi với máy"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btn_bluetooth"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/oval"
            android:text="Chơi qua Bluetooth"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btn_player"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/oval"
            android:text="Tự Chơi"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btn_thoat"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/exit_btn"
            android:text="Thoát"
            android:textColor="#000" />

    </LinearLayout>

</LinearLayout>
